<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Solution" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fitsSystemWindows">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    //button
    <style name="ButtonContainedWhite" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_white_text_color</item>
        <item name="iconTint">@color/primary</item>
        <item name="iconPadding">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>

    <style name="ButtonContainedPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_primary_text_color</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">@dimen/_8sdp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>

    <style name="ButtonOutlinePrimary" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">@dimen/_8sdp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/button_primary_text_color</item>
    </style>


    <style name="ButtonOutlineWhite" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="iconTint">@color/primary</item>
        <item name="iconPadding">@dimen/_8sdp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextButtonContainedWhite" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/primary</item>
        <item name="iconPadding">@dimen/_8sdp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>


    //edit text
    <style name="InputTextStyle" parent="@android:style/TextAppearance">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/text_color_grey</item>
        <item name="boxStrokeColor">@color/line_color_grey</item>
    </style>
    //edit text
    <style name="InputTextStyleOutline" parent="@android:style/TextAppearance">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextColor">@color/text_color_grey</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_8sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_8sdp</item>
    </style>



    // bottom sheet dialog style
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowFixedWidthMajor">100%</item>
        <item name="windowFixedHeightMajor">100%</item>
    </style>
</resources>